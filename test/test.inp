[INPUT]
mol_file      = ./test/input.mol  # Molecule file
grp_file      = ./test/input.grp  # Group file
pos_file      = ./test/input.pos  # Position file
 
[ENERGY]
force_field   = LJ         # [LJ]
 
[DYNAMICS]
integrator    = LEAP       # [LEAP,VVER]
n_steps       = 100        # number of MD steps
time_step     = 0.001      # timestep (ps)
ensemble      = NVE        # [NVE]
rng_seed      = 0          # If zero it is automatically generated
 
[CONSTRAINTS]
rigid_bond    = NO         # constraints all bonds involving hydrogen
 
[BOUNDARY]
boundary_type = PBC        # [NOBC,PBC]
region_size_x = 10.0       # region size (x) in [PBC]
region_size_y = 10.0       # region size (x) in [PBC]
region_size_z = 10.0       # region size (x) in [PBC]
