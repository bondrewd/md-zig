[INPUT]
mol_file      = ./test/argon.mol  # Molecule file
grp_file      = ./test/argon.grp  # Group file
pos_file      = ./test/argon.pos  # Position file

[OUTPUT]
out_ts_step   = 100               # Save time series every 10 steps
out_xyz_step  = 100               # Save coordinates every 10 steps
 
[DYNAMICS]
integrator    = LEAP              # [LEAP,VVER]
n_steps       = 100000            # number of MD steps
time_step     = 0.001             # timestep (ps)
ensemble      = NVE               # [NVE]
rng_seed      = 0                 # If zero it is automatically generated
temperature   = 298               # Temperature (K)
 
[BOUNDARY]
boundary_type = PBC               # [NOBC,PBC]
region_x      = 6.0               # region size (x) in nm for [PBC]
region_y      = 6.0               # region size (y) in nm for [PBC]
region_z      = 6.0               # region size (z) in nm for [PBC]
