[INPUT]
in_mol_file        = ./test/argon.mol  # Molecule file
in_pos_file        = ./test/argon.pos  # Position file

[OUTPUT]
out_ts_step        = 100               # Save time series every 10 steps
out_ts_file        = out.ts            # Time series file name
out_xyz_step       = 100               # Save coordinates every 10 steps
out_xyz_file       = out.xyz           # XYZ position file name
 
[DYNAMICS]
integrator         = LEAP              # [LEAP,VVER]
n_steps            = 100000            # number of MD steps
time_step          = 0.001             # timestep (ps)
ensemble           = NVE               # [NVE]
rng_seed           = 0                 # If 0 it is automatically generated
temperature        = 20                # Temperature (K)
neighbor_list_step = 20                # Steps before updating neighbor list
 
[BOUNDARY]
boundary_type      = PBC               # [NOBC,PBC]
region_x           = 6.7               # region size (x) in nm for [PBC]
region_y           = 6.7               # region size (y) in nm for [PBC]
region_z           = 6.7               # region size (z) in nm for [PBC]
