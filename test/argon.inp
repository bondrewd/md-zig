[INPUT]
mol_file      = ./test/argon.mol  # Molecule file
grp_file      = ./test/argon.grp  # Group file
pos_file      = ./test/argon.pos  # Position file
 
[DYNAMICS]
integrator    = LEAP              # [LEAP,VVER]
n_steps       = 100               # number of MD steps
time_step     = 0.001             # timestep (ps)
ensemble      = NVE               # [NVE]
rng_seed      = 0                 # If zero it is automatically generated
temperature   = 298               # Temperature (K)
 
[BOUNDARY]
boundary_type = PBC               # [NOBC,PBC]
region_size_x = 3.5               # region size (x) in [PBC]
region_size_y = 3.5               # region size (x) in [PBC]
region_size_z = 3.5               # region size (x) in [PBC]
